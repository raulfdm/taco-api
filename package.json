{
  "name": "taco-workspace",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "type": "module",
  "license": "MIT",
  "author": {
    "name": "Raul de Melo",
    "email": "contact@raulmelo.me"
  },
  "scripts": {
    "prepare": "husky install && bun run scripts/fix-graphql-types.ts",
    "build": "turbo build",
    "build:taco-image": "docker ",
    "dev": "turbo dev",
    "dev:docker": "docker-compose -f ./apps/api/docker-compose.yml up",
    "start": "turbo start",
    "lint": "turbo lint",
    "lint:ci": "turbo lint:ci",
    "db:generate": "turbo db:generate",
    "image:build": "bun run scripts/build-image.ts",
    "image:deploy": "bun run image:build"
  },
  "devDependencies": {
    "@biomejs/biome": "1.4.1",
    "@changesets/cli": "2.27.1",
    "@types/bun": "1.0.0",
    "husky": "8.0.3",
    "lint-staged": "15.1.0",
    "turbo": "1.11.1",
    "typescript": "5.3.3"
  },
  "packageManager": "bun@1.0.20",
  "engines": {
    "bun": "1.0.20"
  },
  "lint-staged": {
    "*.{js,ts,json}": "bunx @biomejs/biome check --apply"
  }
}
