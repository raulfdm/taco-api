{
  "name": "taco-api",
  "description": "Brazilian Table of Food Composition (TACO) - GraphQL API",
  "version": "2.2.0",
  "type": "module",
  "homepage": "https://github.com/raulfdm/taco-api",
  "bugs": {
    "url": "https://github.com/raulfdm/taco-api/issues"
  },
  "license": "MIT",
  "author": {
    "name": "Raul de Melo",
    "email": "contact@raulmelo.me"
  },
  "scripts": {
    "start": "NODE_ENV=production node dist/app.js",
    "dev": "NODE_ENV=development tsx --watch src/app.ts",
    "studio": "prisma studio",
    "build": "tsx scripts/build.ts",
    "lint": "eslint --ext .ts,.js,.json,.md src",
    "db:migrate": "NODE_ENV=development prisma migrate dev",
    "db:generate": "NODE_ENV=development prisma generate",
    "db:seed": "NODE_ENV=development prisma db seed",
    "db:reset": "NODE_ENV=development prisma migrate reset",
    "docs:dev": "vuepress dev documentation",
    "docs:build": "vuepress build documentation",
    "image:build": "docker build -t raulfdm/taco-api:v2 -t raulfdm/taco-api:latest .",
    "image:deploy": "pnpm run image:build && docker push raulfdm/taco-api",
    "prepare": "husky install && pnpm run db:generate"
  },
  "dependencies": {
    "@prisma/client": "5.0.0",
    "cors": "2.8.5",
    "dotenv": "16.3.1",
    "esbuild": "0.18.13",
    "express": "4.18.2",
    "graphql": "16.7.1",
    "graphql-http": "1.20.0",
    "graphql-modules": "2.1.2",
    "prisma": "5.0.0",
    "tsx": "3.12.7",
    "zod": "3.21.4"
  },
  "devDependencies": {
    "@changesets/cli": "2.26.2",
    "@types/cors": "2.8.13",
    "@types/csvtojson": "2.0.0",
    "@types/express": "4.17.17",
    "@types/node": "18.15.13",
    "@typescript-eslint/eslint-plugin": "6.0.0",
    "@typescript-eslint/parser": "6.0.0",
    "@vuepress/client": "2.0.0-beta.61",
    "csvtojson": "2.0.10",
    "eslint": "8.45.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-prettier": "5.0.0",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "husky": "8.0.3",
    "lint-staged": "13.2.3",
    "prettier": "3.0.0",
    "typescript": "5.1.6",
    "vue": "3.3.4",
    "vuepress": "2.0.0-beta.61"
  },
  "engines": {
    "node": "18"
  },
  "prisma": {
    "seed": "tsx ./src/infrastructure/seed/index.ts",
    "schema": "src/infrastructure/prisma/schema.prisma"
  },
  "lint-staged": {
    "*.{js,ts,json}": "eslint --fix",
    "*.{md,mdx,yml}": "prettier --write"
  }
}
