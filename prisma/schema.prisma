generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id    Int    @id @default(autoincrement())
  name  String @unique @db.VarChar(255)
  foods Food[]

  @@map("categories")
}

model Food {
  id         Int      @id @default(autoincrement())
  name       String   @unique @db.VarChar(255)
  category   Category @relation(fields: [categoryId], references: [id])
  categoryId Int

  @@map("foods")
}
